{
  "version": 2,
  "framework": null,
  "buildCommand": "echo 'Frontend served from ./frontend'",
  "outputDirectory": "frontend",
  "public": true,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/scans/bulk",
      "dest": "/api/scans-bulk.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/scans/count",
      "dest": "/api/scans-count.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "API_KEY": "@api_key",
    "DATABASE_URL": "@database_url",
    "NODE_ENV": "@node_env"
  }
}
