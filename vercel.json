js
// api/scans-bulk.js
import { getPool } from './db.js';

export default async function handler(req, res) {
  if (req.method !== 'POST') {
    res.status(405).json({ error: 'Method not allowed' });
    return;
  }

  const apiKey = req.headers['x-api-key'];
  if (!apiKey || apiKey !== process.env.API_KEY) {
    res.status(401).json({ error: 'Unauthorized' });
    return;
  }

  const scans = req.body;
  if (!Array.isArray(scans) || scans.length === 0) {
    res.status(400).json({ error: 'Expected non-empty array of scans' });
    return;
  }

  const pool = getPool();
  const client = await pool.connect();

  try {
    await client.query('BEGIN');
    const serverIds = [];

    for (const scan of scans) {
      const required = ['device_id', 'sample', 'well_name', 'block', 'type', 'scanned_at'];
      for (const f of required) {
        if (!scan[f]) {
          throw new Error(`Missing required field: ${f}`);
        }
      }

      const result = await client.query(
        `INSERT INTO samples (
           device_id, local_id, sample, well_name, block, type,
           scanned_at, scanned_by, is_test, created_at, updated_at
         ) VALUES ($1,$2,$3,$4,$5,$6,$7,$8,$9,NOW(),NOW())
         RETURNING id`,
        [
          scan.device_id,
          scan.local_id || null,
          scan.sample,
          scan.well_name,
          scan.block,
          scan.type,
          new Date(scan.scanned_at),
          scan.scanned_by || 'Unknown',
          scan.is_test || false
        ]
      );
      serverIds.push(result.rows[0].id);
    }

    await client.query('COMMIT');
    const countResult = await client.query('SELECT COUNT(*) AS total FROM samples');
    res.status(200).json({
      server_ids: serverIds,
      total_on_server: Number(countResult.rows[0].total)
    });
  } catch (e) {
    await client.query('ROLLBACK');
    res.status(500).json({ error: 'Internal error', message: e.message });
  } finally {
    client.release();
  }
}
